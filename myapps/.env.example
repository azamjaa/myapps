# ====================================
# MyApps KEDA Environment Template
# Copy ini ke .env dan update values
# ====================================

# APP CONFIGURATION
APP_NAME=MyApps KEDA
APP_ENV=production
APP_DEBUG=false
APP_URL=http://127.0.0.1/myapps
APP_TIMEZONE=Asia/Kuala_Lumpur

# DATABASE CONFIGURATION
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=myapps
DB_USERNAME=root
DB_PASSWORD=your_actual_password_here

# MAIL CONFIGURATION (Gmail SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password_here
MAIL_ENCRYPTION=tls
MAIL_FROM_NAME=Sistem MyApps

# JWT SECURITY
# Generate: php -r "echo bin2hex(random_bytes(32));"
JWT_SECRET_KEY=generate_this_with_php_command_above
JWT_ALGORITHM=HS256

# CORS CONFIGURATION
# Allowed domains separated by comma
CORS_ALLOWED_ORIGINS=http://127.0.0.1,http://localhost

# RATE LIMITING
RATE_LIMIT_ENABLED=true
RATE_LIMIT_ATTEMPTS=5
RATE_LIMIT_WINDOW=900
